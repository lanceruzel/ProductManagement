@model List<Product>

@{
    ViewData["Title"] = "Product List";
}

<div class="d-flex align-items-center justify-content-between">
    <h1>Products</h1>

    <input style="max-width: 300px" class="form-control" type="text" placeholder="Search product..." />
</div>

<div class="container">
    <div class="row row-cols-auto row-gap-4 justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col">
                @* Product Container Data *@
                <div class="d-flex flex-column rounded-2 shadow overflow-hidden" style="height: auto; width: 300px">
                    <div>
                        <img src="/images/products/@item.ImageFileName" class="object-fit-cover" style="width: 100%; height: 250px" />
                    </div>

                    <div class="p-3">
                        <h5>@item.Name</h5>
                        <p class="text-truncate">@item.Description</p>
                        <button class="btn btn-outline-primary w-100 mb-2">Edit Product</button>
                        <button class="btn btn-primary w-100">View Product</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
